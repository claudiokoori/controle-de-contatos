@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o usuario";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuario @Model.Nome</h3>
</div>
<div class="text-center">
    <a class="btn btn-primary mx-auto" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger mx-auto" role="button" asp-controller="Usuario" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>
